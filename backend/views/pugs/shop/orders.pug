extends ../layout/main-layout.pug

block styles 
    link(rel="StyleSheet" href="/css/product.css")

block content 
    main
        if orders.length > 0
            ul
                each order in orders
                    li 
                     h1 OrderId: #{order.id} 
                     ul 
                        each product in order.Products
                            li
                                h1 Product Name : #{product.title}
                                h2 Quantity: #{product.orderItem.quantity} 
        else
            h1 Nothing there!