extends ../layout/main-layout.pug
block styles 
    link(rel="StyleSheet" href="/css/form.css")
    link(rel="StyleSheet" href="/css/product.css")
block content
    main
        form.product-form(action="/admin/product", method="POST")
            .form-control
                label(for="title") Title
                input(type="text", name="title", id="title")
            .form-control
                label(for="title") Image URL
                input(type="text", name="imageUrl", id="imageUrl")
            .form-control
                label(for="title") Price
                input(type="number", name="price", id="price", step="0.01")
            .form-control
                label(for="title") Description
                textarea(type="text", name="description", id="description", rows="5")
            button(type="submit") Add Product