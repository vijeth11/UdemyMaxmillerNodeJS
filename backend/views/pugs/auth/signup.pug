extends ../layout/main-layout.pug
block styles 
    link(rel="StyleSheet" href="/css/form.css")
    link(rel="StyleSheet" href="/css/auth.css")
block content
    main
        if errorMessage
            div.user-message.user-message--error #{errorMessage}

        form.login-form(action="/signup", method="POST")
            .form-control
                label(for="email") E-Mail
                input(class={invalid: validationErrors.find(e => e.param === 'email')},type="email", name="email", id="email", value=oldInput.email)
            .form-control
                label(for="password") Password
                input(class={invalid: validationErrors.find(e => e.param === 'password')},type = "password", name="password", id="password", value=oldInput.password)
            .form-control
                label(for="confirmPassword") Confirm Password
                input(class={invalid: validationErrors.find(e => e.param === 'confirmPassword')},type="password", name="confirmPassword", id="confirmPassword", value=oldInput.confirmPassword)
            input(type="hidden" name="_csrf" value=csrftoken)
            button(class="btn", type="submit") SignUp 